{% extends 'admin_base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header  border-0">
        <div class="d-flex align-items-center">
            <h5 class="card-title mb-0 flex-grow-1">Listes des Annonce</h5>
            <div class="flex-shrink-0">
                <a type="button" class="btn btn-success add-btn" id="create-btn" href="{{ path('app_annonce_new') }}"><i class="ri-add-line align-bottom me-1"></i> Ajouter une Annonce</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="scroll-horizontal" class="table nowrap align-middle card-li table-datatable" style="width:100%">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.titre }}</td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.date ? annonce.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div class="dropdown d-inline-block">
                        <button class="btn btn-soft-secondary btn-sm dropdown" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="ri-more-fill align-middle"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">

                            <li><a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}"
                                   class="dropdown-item edit-item-btn"><i
                                            class="ri-pencil-fill align-bottom me-2 text-muted"></i> Modifier</a>
                            </li>
                            <li>
                                <a href="{{ path('app_annonce_delete', {'id': annonce.id}) }}"
                                   class="dropdown-item remove-item-btn">
                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Suprimer
                                </a>
                            </li>
                        </ul>
                    </div>

                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>

{% endblock %}
