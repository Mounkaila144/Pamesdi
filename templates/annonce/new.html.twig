{% extends 'admin_base.html.twig' %}

    {% block body %}
        <div class="card shadow p-3 md-5" style="background-color: #8CB269">
            <div class="card-header">
                <h3 class="card-title mb-0 text-center">Ajouter une nouvelle annonce</h3>
            </div>
            <div class="card-body" >
                {{ form_start(form) }}
                <div class="row" >
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.titre) }}
                            {{ form_widget(form.titre,{ 'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description,{ 'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.date) }}
                            {{ form_widget(form.date,{ 'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Ajouter</button>
                        </div>
                    </div>

                </div>
                {{ form_end(form) }}
            </div>
        </div>

    {% endblock %}

