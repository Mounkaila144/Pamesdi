<header id="page-topbar">
    <div class="layout-width">
        <div class="navbar-header">

            <div class="d-flex align-items-center">

                <div class="ms-1 header-item d-none d-sm-flex">
                    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle"
                            data-toggle="fullscreen">
                        <i class='bx bx-fullscreen fs-22'></i>
                    </button>
                </div>

                <div class="ms-1 header-item d-none d-sm-flex">
                    <button type="button"
                            class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle light-dark-mode">
                        <i class='bx bx-moon fs-22'></i>
                    </button>
                </div>


            </div>

            <div class="d-flex align-items-end">
                <div class="dropdown ms-sm-3 header-item topbar-user">
                    <button type="button" class="btn show" id="page-header-user-dropdown" data-bs-toggle="dropdown"
                            aria-haspopup="false" aria-expanded="false">
                        <span class="d-flex align-items-center">
                        <i class='bx bx-user-circle fs-24 '></i>
                            <span class="text-start ms-xl-2 ">
                                <span class="d-none d-xl-inline-block ms-1 fw-medium user-name-text">{{ app.user.firstName }}</span>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <span class="d-none d-xl-block ms-1 fs-12 text-muted user-name-sub-text">Admin n째{{ app.user.id }}</span>
                                {% endif %}
                                {% if is_granted('ROLE_RESTAURATEUR') %}
                                    <span class="d-none d-xl-block ms-1 fs-12 text-muted user-name-sub-text">Restaurateur n째{{ app.user.id }}</span>
                                {% endif %}
                                {% if is_granted('ROLE_DELIVERER') %}
                                    <span class="d-none d-xl-block ms-1 fs-12 text-muted user-name-sub-text">Livreur n째{{ app.user.id }}</span>
                                {% endif %}
                                {% if is_granted('ROLE_EMPLOYER') %}
                                    <span class="d-none d-xl-block ms-1 fs-12 text-muted user-name-sub-text">Employer n째{{ app.user.id }}</span>
                                {% endif %}
                            </span>
                        </span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end show" data-popper-placement="bottom-end"
                         style="position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate(0px, 62px);">
                        <!-- item-->
                        <h6 class="dropdown-header">Bonjour {{ app.user.firstName }}</h6>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <a class="dropdown-item" href="{{ path('app_user_edit',{'id':app.user.id}) }}"><i
                                        class="mdi mdi-account-circle text-muted fs-16 align-middle me-1"></i> <span
                                        class="align-middle">Profile</span></a>                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="dropdown-item" href="{{ path('app_user_edit',{'id':app.user.id}) }}"><i
                                        class="mdi mdi-account-circle text-muted fs-16 align-middle me-1"></i> <span
                                        class="align-middle">Profile</span></a>                        {% endif %}
                        {% if is_granted('ROLE_RESTAURATEUR') %}
                            <a class="dropdown-item" href="{{ path('app_user_restaurateur_edit',{'id':app.user.id}) }}"><i
                                        class="mdi mdi-account-circle text-muted fs-16 align-middle me-1"></i> <span
                                        class="align-middle">Profile</span></a>                        {% endif %}
                        {% if is_granted('ROLE_DELIVERER') %}
                            <a class="dropdown-item" href="{{ path('app_user_deliverer_edit',{'id':app.user.id}) }}"><i
                                        class="mdi mdi-account-circle text-muted fs-16 align-middle me-1"></i> <span
                                        class="align-middle">Profile</span></a>                        {% endif %}
                        {% if is_granted('ROLE_EMPLOYER') %}
                            <a class="dropdown-item" href="{{ path('app_user_employer_edit',{'id':app.user.id}) }}"><i
                                        class="mdi mdi-account-circle text-muted fs-16 align-middle me-1"></i> <span
                                        class="align-middle">Profile</span></a>                        {% endif %}
                        {% if is_granted('ROLE_DELIVERER') %}

                        <a class="dropdown-item" href=""><i
                                    class="mdi mdi-message-text-outline text-muted fs-16 align-middle me-1"></i> <span
                                    class="align-middle">Messages</span></a>
                        <a class="dropdown-item" href="{{path('app_orderby_deliverer') }}"><i
                                    class="mdi mdi-calendar-check-outline text-muted fs-16 align-middle me-1"></i> <span
                                    class="align-middle">Commandes Effectuer </span></a>
                        {% endif %}
                        <a class="dropdown-item" href="{{ path('app_logout') }}"><i
                                    class="mdi mdi-logout text-muted fs-16 align-middle me-1"></i> <span
                                    class="align-middle" data-key="t-logout">Deconnexion</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>